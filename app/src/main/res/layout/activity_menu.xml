<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.chrx.testaixenbus.Applications.Menu"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/arrets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/arrets"
        app:layout_constraintBottom_toTopOf="@+id/itineraire"
        app:layout_constraintEnd_toStartOf="@+id/lignes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lignes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ligne"
        app:layout_constraintBottom_toTopOf="@+id/itineraire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/arrets"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/itineraire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="149dp"
        android:background="@drawable/iti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lignes" />

    <Button
        android:id="@+id/informations"
        android:layout_width="384dp"
        android:layout_height="89dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itineraire" />



</android.support.constraint.ConstraintLayout>
